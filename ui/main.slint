import { SettingsWindow } from "./settings/main.slint";
import { SearchWindow } from "./search/main.slint";
import { SearchTab } from "./search/search_tab_bar.slint";

export component SearchWindow inherits Window {
	title: "Stickerbox Search";
	default-font-size: 18px;
	preferred-width: 500px;
	preferred-height: 400px;
	// no-frame: true;

	forward-focus: tab_hotkey_handler;

	search_window := SearchWindow {}

	tab_hotkey_handler := FocusScope {
		key-pressed(event) => {
            if (event.modifiers.control) {
				if (event.text == "1") {
					search_window.selected_tab = SearchTab.Sticker;
				} else if (event.text == "2") {
					search_window.selected_tab = SearchTab.Compose;
				} else if (event.text == "3") {
					search_window.selected_tab = SearchTab.FunText;
				} else if (event.text == "4") {
					search_window.selected_tab = SearchTab.GifSearch;
				};
            }
			accept
		}
	}
}

export component SettingsWindow inherits Window {
	title: "Stickerbox Settings";
	preferred-width: 800px;
	preferred-height: 600px;
	default-font-size: 18px;
	callback show-secondary-window();
	SettingsWindow {}
}
